		"pdfkit": "^0.10.0",
		"ts-node-dev": "^1.0.0-pre.43",
		"typescript": "^3.6.4",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@types/body-parser": "^1.17.1",
		"@types/compression": "^1.0.1",
		"@types/concurrently": "^4.1.0",
		"@types/cors": "^2.8.6",
		"@types/errorhandler": "0.0.32",
		"@types/eslint": "^6.1.3",
		"@types/express": "^4.17.1",
		"@types/jest": "^24.0.21",
		"@types/jsonwebtoken": "^8.3.5",
